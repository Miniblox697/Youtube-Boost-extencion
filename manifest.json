{
  "manifest_version": 3,
  "name": "YouTube Boost",
  "version": "3.0.0",
  "description": "Focus + Study (Pomodoro) + captions + channel speed + tracking + bookmarks + exam mode + anti-binge + whitelist + animated entry.",
  "permissions": ["storage"],
  "host_permissions": ["https://www.youtube.com/*"],
  "background": { "service_worker": "background.js" },
  "action": { "default_title": "YouTube Boost" },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js", "ui.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "toggle_panel": {
      "suggested_key": { "default": "Alt+Y" },
      "description": "Abrir/cerrar panel"
    },
    "toggle_focus": {
      "suggested_key": { "default": "Alt+F" },
      "description": "Activar/desactivar Focus Mode"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
